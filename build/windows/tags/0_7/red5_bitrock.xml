<project>
    <shortName>red5</shortName>
    <fullName>Red5</fullName>
    <version>0.3</version>
    <installerFilename>setup-${product_shortname}-${product_version}-${platform_name}.${platform_exec_suffix}</installerFilename>
    <readmeFile></readmeFile>
    <licenseFile>../license.txt</licenseFile>
    <wrapLicenseFileText>1</wrapLicenseFileText>
    <leftImage>images/red5_left.png</leftImage>
    <logoImage>images/red5_top.png</logoImage>
    <splashImage>images/red5_splash.png</splashImage>
    <defaultLanguage>en</defaultLanguage>
    <allowLanguageSelection>0</allowLanguageSelection>
    <postInstallationScript></postInstallationScript>
    <postInstallationScriptArguments></postInstallationScriptArguments>
    <showPostInstallationScriptResult>0</showPostInstallationScriptResult>
    <preUninstallationScript></preUninstallationScript>
    <preUninstallationScriptArguments></preUninstallationScriptArguments>
    <allowComponentSelection>1</allowComponentSelection>
    <allowedLanguages></allowedLanguages>
    <cdromDirectory>${product_shortname}-${product_version}-cdrom</cdromDirectory>
    <cdromDiskSize>700000000</cdromDiskSize>
    <cdromFirstDiskSize>650000000</cdromFirstDiskSize>
    <defaultInstallationMode></defaultInstallationMode>
    <defaultUnixDirectoryPermissions>755</defaultUnixDirectoryPermissions>
    <defaultUnixFilePermissions>644</defaultUnixFilePermissions>
    <description>Red5 - Open Source Flash Server</description>
    <outputDirectory>.</outputDirectory>
    <projectSchemaVersion>1.2</projectSchemaVersion>
    <saveRelativePaths>1</saveRelativePaths>
    <slideShowLoop>1</slideShowLoop>
    <slideShowTiming>5</slideShowTiming>
    <startMenuGroupName>${product_fullname}</startMenuGroupName>
    <style>standard</style>
    <summary>Red5 is an Open Source Flash Server written in Java. Visit http://osflash.org/red5 for details.</summary>
    <uninstallerDirectory>${installdir}</uninstallerDirectory>
    <uninstallerName>uninstall</uninstallerName>
    <validatorProgram></validatorProgram>
    <vendor>Red5 Team</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Red5 server</description>
            <canBeEdited>0</canBeEdited>
            <detailedDescription>The Red5 server.</detailedDescription>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>Start Red5 in console.</comment>
                    <exec></exec>
                    <icon></icon>
                    <name>Red5</name>
                    <path></path>
                    <platforms>windows</platforms>
                    <windowsExec>${installdir}/bin/Red5.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/bin</windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../conf</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../hosts</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../lib</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../webapps</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/uninstall</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <windowsExec>${installdir}/uninstall.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Libraries</description>
                    <destination>${installdir}/lib</destination>
                    <name>lib</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../red5.jar</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Log folder</description>
                    <destination>${installdir}/logs</destination>
                    <name>logs</name>
                    <platforms>all</platforms>
                </folder>
                <folder>
                    <description>Documentation</description>
                    <destination>${installdir}/doc</destination>
                    <name>doc</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../doc/Frequently Asked Questions.doc</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../doc/Frequently Asked Questions.pdf</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../doc/Frequently Asked Questions.swf</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../doc/readme.html</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../doc/red5.css</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Licenses</description>
                    <destination>${installdir}/doc</destination>
                    <name>licenses</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../doc/licenseInfo</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Flash samples</description>
                    <destination>${installdir}/swf</destination>
                    <name>swfdeploy</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../swf/DEV_Deploy</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Windows specific files</description>
                    <destination>${installdir}</destination>
                    <name>windows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>bin</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>conf</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>lib</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
            </folderList>
            <postInstallationActionList/>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <windowsExec>${installdir}/uninstall.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Readme</comment>
                    <name>Readme</name>
                    <windowsExec>${installdir}/doc/readme.html</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/doc</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>FAQ (Word)</comment>
                    <name>FAQWord</name>
                    <windowsExec>${installdir}/doc/Frequently Asked Questions.doc</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/doc</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>FAQ (PDF)</comment>
                    <name>FAQPDF</name>
                    <windowsExec>${installdir}/doc/Frequently Asked Questions.pdf</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/doc</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>FAQ (Flash)</comment>
                    <name>FAQFlash</name>
                    <windowsExec>${installdir}/doc/Frequently Asked Questions.swf</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/doc</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>License</comment>
                    <name>License</name>
                    <windowsExec>${installdir}/doc/licenseInfo/Red5LicenseInfo.txt</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/doc/licenseInfo</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Team</comment>
                    <name>Team</name>
                    <windowsExec>${installdir}/doc/licenseInfo/team.txt</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/doc/licenseInfo</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Run ${product_fullname} in console</comment>
                    <name>RunConsole</name>
                    <windowsExec>${installdir}/bin/Red5.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/bin</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
        <component>
            <name>javasource</name>
            <description>Java source code</description>
            <canBeEdited>1</canBeEdited>
            <detailedDescription>The source code for the Red5 server.</detailedDescription>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList/>
            <folderList>
                <folder>
                    <description>Java source code</description>
                    <destination>${installdir}</destination>
                    <name>src</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../src</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Ant build script</description>
                    <destination>${installdir}</destination>
                    <name>src_ant</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../build.xml</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Java source code documentation</description>
                    <destination>${installdir}/doc</destination>
                    <name>src_doc</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../doc/eclipsesetup.html</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <postInstallationActionList/>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Eclipse setup</comment>
                    <name>Eclipse setup</name>
                    <windowsExec>${installdir}/doc/eclipsesetup.html</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/doc</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
        <component>
            <name>flashsource</name>
            <description>Flash source code</description>
            <canBeEdited>1</canBeEdited>
            <detailedDescription>The source code for the flash samples.</detailedDescription>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList/>
            <folderList>
                <folder>
                    <description>Flash source code</description>
                    <destination>${installdir}/swf</destination>
                    <name>swfsource</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../swf/DEV_Source</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
            </folderList>
            <postInstallationActionList/>
            <startMenuShortcutList/>
        </component>
    </componentList>
    <customLanguageFileList/>
    <fileList/>
    <finalPageActionList/>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <title></title>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value>${platform_install_prefix}/${product_shortname}-${product_version}</value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <leftImage></leftImage>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
        <booleanParameter>
            <name>win_service</name>
            <title>Service installation</title>
            <description></description>
            <explanation>Should Red5 be installed as service?</explanation>
            <value></value>
            <default>1</default>
            <ask>yes</ask>
            <cliOptionName></cliOptionName>
            <leftImage></leftImage>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${platform_name}</text>
                    <value>windows</value>
                </compareText>
            </ruleList>
        </booleanParameter>
    </parameterList>
    <platformOptionsList/>
    <postInstallationActionList>
        <substitute>
          <files>${installdir}/conf/jetty.xml;${installdir}/conf/red5.xml</files>
          <substitutionList>
            <substitution>
              <pattern>"/conf/</pattern>
              <value>"${installdir}/conf/</value>
            </substitution>
            <substitution>
              <pattern>&gt;/conf/</pattern>
              <value>&gt;${installdir}/conf/</value>
            </substitution>
            <substitution>
              <pattern>\./conf/</pattern>
              <value>${installdir}/conf/</value>
            </substitution>
            <substitution>
              <pattern>&gt;conf/</pattern>
              <value>&gt;${installdir}/conf/</value>
            </substitution>
            <substitution>
              <pattern>"conf/</pattern>
              <value>"${installdir}/conf/</value>
            </substitution>
            <substitution>
              <pattern>\./webapps</pattern>
              <value>${installdir}/webapps</value>
            </substitution>
            <substitution>
              <pattern>&lt;/value&gt;&lt;/constructor-arg&gt;</pattern>
              <value>&lt;/value&gt;&lt;/constructor-arg&gt;&lt;constructor-arg&gt;&lt;value&gt;..\hosts&lt;/value&gt;&lt;/constructor-arg&gt;</value>
            </substitution>
          </substitutionList>
        </substitute>
        <substitute>
          <files>${installdir}/conf/wrapper.conf</files>
          <substitutionList>
            <substitution>
              <pattern>wrapper.java.command=java</pattern>
              <value>wrapper.java.command=${java_executable}</value>
            </substitution>
          </substitutionList>
        </substitute>
        <runProgram>
            <ruleEvaluationLogic>and</ruleEvaluationLogic>
            <ruleList>
                <compareValues>
                    <logic>equals</logic>
                    <value1>${win_service}</value1>
                    <value2>1</value2>
                </compareValues>
                <compareText>
                    <logic>equals</logic>
                    <text>${platform_name}</text>
                    <value>windows</value>
                </compareText>
            </ruleList>
            <program>${installdir}/bin/InstallRed5-NT.bat</program>
            <programArguments></programArguments>
            <runAs></runAs>
            <workingDirectory>${installdir}/bin</workingDirectory>
        </runProgram>
    </postInstallationActionList>
    <preBuildActionList/>
    <preInstallationActionList>
        <autodetectJava>
            <promptUser>1</promptUser>
            <validVersionList>
                <validVersion>
                    <maxVersion>1.5</maxVersion>
                    <minVersion>1.4</minVersion>
                    <vendor></vendor>
                </validVersion>
            </validVersionList>
        </autodetectJava>
    </preInstallationActionList>
    <preUninstallationActionList>
        <actionGroup>
            <ruleEvaluationLogic>and</ruleEvaluationLogic>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${platform_name}</text>
                    <value>windows</value>
                </compareText>
            </ruleList>
            <actionList>
                <runProgram>
                    <program>${installdir}/bin/StopRed5-NT.bat</program>
                    <programArguments></programArguments>
                    <runAs></runAs>
                    <workingDirectory>${installdir}/bin</workingDirectory>
                </runProgram>
                <runProgram>
                    <program>${installdir}/bin/UninstallRed5-NT.bat</program>
                    <programArguments></programArguments>
                    <runAs></runAs>
                    <workingDirectory>${installdir}/bin</workingDirectory>
                </runProgram>
            </actionList>
        </actionGroup>
    </preUninstallationActionList>
    <slideShowImageList/>
</project>

