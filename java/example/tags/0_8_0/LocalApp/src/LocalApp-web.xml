<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	
	<bean id="web.context.LocalApp" class="org.red5.server.Context">
		<property name="scopeResolver" ref="red5.scopeResolver" />
		<property name="clientRegistry" ref="global.clientRegistry" />
		<property name="serviceInvoker" ref="global.serviceInvoker" />
		<property name="mappingStrategy" ref="global.mappingStrategy" />
	</bean>
	
	<bean id="web.scope.LocalApp" class="org.red5.server.WebScope" init-method="register">
		<property name="server" ref="red5.server" />
		<property name="parent" ref="global.scope" />
		<property name="context" ref="web.context.LocalApp" />
		<property name="handler" ref="web.handler.LocalApp" />
		<property name="contextPath" value="/LocalApp" />
		<property name="virtualHosts" value="*,localhost, localhost:8080, 127.0.0.1:8080" />
	</bean>

	<bean id="web.handler.LocalApp" class="example.localapp.Application"/>

</beans>
