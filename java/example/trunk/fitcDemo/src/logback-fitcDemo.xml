<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<contextName>fitcDemo</contextName>
	
	<jmxConfigurator contextName="fitcDemo" />

	<appender name="FITC" class="ch.qos.logback.core.FileAppender">
		<File>log/fitcdemo.log</File>
		<Append>false</Append>
		<Encoding>UTF-8</Encoding>
		<BufferedIO>false</BufferedIO>
		<ImmediateFlush>true</ImmediateFlush>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%date [%thread] %-5level %logger{35} - %msg%n
			</Pattern>
		</layout>
	</appender>
	<root>
		<level value="DEBUG" />
		<appender-ref ref="FITC" />
	</root>		
	<logger name="org.red5.demos.fitc">
		<level value="DEBUG" />
	</logger>
</configuration>
