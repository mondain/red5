    <!-- =========================================================== -->
    <!-- Additional contexts not defined above                       -->
    <!-- =========================================================== -->
    <Call class="org.mortbay.jetty.webapp.WebAppContext" name="addWebApplications">
      <Arg><Ref id="Server"/></Arg>
      <Arg>./webapps/</Arg>
      <Arg>web-default.xml</Arg>
      <Arg><Array type="java.lang.String">
			<Item>org.mortbay.jetty.webapp.WebXmlConfiguration</Item>
			<Item>org.mortbay.jetty.webapp.JettyWebXmlConfiguration</Item>
			<Item>org.red5.server.jetty.Red5WebPropertiesConfiguration</Item>
	  </Array></Arg>
      <Arg type="boolean">True</Arg>
      <Arg type="boolean">True</Arg>
    </Call>
    <!--
    addWebApplications(
	    Server server, 
	    java.lang.String webapps, 
	    java.lang.String defaults, 
	    java.lang.String[] configurations, 
	    boolean extract, 
	    boolean java2CompliantClassLoader
    ) 
    -->
    

    <!-- =========================================================== -->
    <!-- Configure Realms                                            -->
    <!-- =========================================================== -->
    <Set name="UserRealms">
      <Array type="org.mortbay.jetty.security.UserRealm">
        <Item>
          <New class="org.mortbay.jetty.security.HashUserRealm">
            <Set name="name">Test Realm</Set>
            <Set name="config">conf/realm.properties</Set>
          </New>
        </Item>
      </Array>
    </Set>

    <!-- =========================================================== -->
    <!-- Do NOT start the server, red5 will do this                                            -->
    <!-- =========================================================== -->
    <Set name="stopAtShutdown">true</Set>
    <!-- <Call name="start"/> -->

</Configure>