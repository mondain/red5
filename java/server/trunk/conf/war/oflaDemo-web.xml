<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:lang="http://www.springframework.org/schema/lang"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-2.0.xsd">

	<!-- oflaDemo web context -->
	<bean id="web.context" class="org.red5.server.Context" lazy-init="true" />

	<bean id="web.scope" class="org.red5.server.WebScope" lazy-init="true">
		<property name="autoStart" value="false" />
		<property name="context" ref="web.context" />
		<property name="handler" ref="web.handler" />
		<property name="contextPath" value="@context.path@" />
		<property name="virtualHosts" value="@virtual.hosts@" />
	</bean>

	<bean id="web.handler"
	    class="org.red5.server.webapp.oflaDemo.Application" lazy-init="true" />

    <bean id="demoService.service"
	    class="org.red5.server.webapp.oflaDemo.DemoService" lazy-init="true" />

</beans>
