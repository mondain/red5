<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:lang="http://www.springframework.org/schema/lang"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-2.0.xsd">
    
    <!-- the application context definition for the springapp DispatcherServlet -->
    
    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>
    
    <bean id="baseController" abstract="true" />
    
    <bean id="panelController" class="org.red5.webapps.admin.controllers.PanelController" parent="baseController">
        <property name="daoAuthenticationProvider" ref="daoAuthenticationProvider"/>
    </bean>
    
    <bean id="registerController" class="org.red5.webapps.admin.controllers.RegisterUserController" parent="baseController">
        <property name="daoAuthenticationProvider" ref="daoAuthenticationProvider"/>
        <property name="sessionForm" value="true"/>
        <property name="commandName" value="commandBean"/>
        <property name="commandClass" value="org.red5.webapps.admin.controllers.service.UserDetails"/>
        <property name="validator">
            <bean class="org.red5.webapps.admin.controllers.service.UserDetailsValidator"/>
        </property>
        <property name="formView" value="register"/>
        <property name="successView" value="index.jsp"/>
    </bean>
    
    <bean id="viewNameTranslator" class="org.springframework.web.servlet.view.DefaultRequestToViewNameTranslator"/>
    
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"></property>
        <property name="prefix" value="/" />
        <property name="suffix" value=".jsp" />        
    </bean>
    
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/panel.jsp">panelController</prop>
                <prop key="/register.jsp">registerController</prop>
            </props>
        </property>
    </bean>    
    
</beans>
