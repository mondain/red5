<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="red5.clientRegistry" class="org.red5.server.api.impl.ClientRegistry" />
	<bean id="red5.serviceInvoker" class="org.red5.server.api.impl.ServiceInvoker" />
	<bean id="red5.mappingStrategy" class="org.red5.server.api.impl.MappingStrategy" />
	<bean id="red5.context" class="org.red5.server.api.impl.DefaultContext" autowire="byType">
		<property name="contextPath" value="test/org/red5/server/api/test" />
	</bean>

	<bean id="host.default" class="org.red5.server.api.impl.Scope" init-method="init">
		<property name="depth" value="1" />
		<property name="context" ref="red5.context" />
		<property name="name" value="localhost" />
	</bean>

	<bean id="app.default" class="org.red5.server.api.impl.Scope" init-method="init">
		<property name="parent" ref="host.default" />
		<property name="name" value="default" />
		<property name="handler" ref="handler.default" />
	</bean>

	<bean id="app.test" class="org.red5.server.api.impl.Scope" init-method="init">
		<property name="parent" ref="host.default" />
		<property name="name" value="test" />
		<property name="handler" ref="handler.default" />
	</bean>
	
	<bean id="handler.default" class="org.red5.server.api.impl.ApplicationAdapter" singleton="false" />

	<bean id="red5.scopeResolver" class="org.red5.server.api.impl.ScopeResolver">
		<property name="root" ref="host.default" />
	</bean>
	
</beans>